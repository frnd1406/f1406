# NAS API Environment Variables (example)
# Replace placeholder values before running in any environment.

# === Server Configuration ===
PORT=8080
ENV=development
LOG_LEVEL=debug

# === Security Secrets ===
JWT_SECRET=CHANGE_ME_IN_PROD
SESSION_SECRET=CHANGE_ME_IN_PROD
CSRF_SECRET=CHANGE_ME_IN_PROD

# === CORS Configuration ===
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# === Frontend URL ===
FRONTEND_URL=http://localhost:5173

# === Rate Limiting ===
RATE_LIMIT_PER_MIN=100

# === Database Configuration ===
DB_HOST=localhost
DB_PORT=5433
DB_USER=nas_user
DB_PASSWORD=CHANGE_ME
DB_NAME=nas_db

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6380

# === Email Configuration (Resend) ===
RESEND_API_KEY=REPLACE_WITH_RESEND_KEY
EMAIL_FROM="NAS.AI <noreply@example.com>"

# === Cloudflare Configuration ===
CLOUDFLARE_API_TOKEN=REPLACE_WITH_CLOUDFLARE_TOKEN
CLOUDFLARE_R2_BUCKET=nas-ai-storage
